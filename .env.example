# Database (PostgreSQL)
# Used by: Control API
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/thakur_deploy"

# Redis (BullMQ)
# Used by: Control API, Build Worker
REDIS_URL="redis://localhost:6379"

# Security
# Used by: Control API (for encrypting user env vars)
# Must be 32 characters long
ENCRYPTION_KEY="12345678901234567890123456789012"

# Service URLs (Internal Communication)
# Control API (Port 4000)
# Used by: Build Worker, UI
CONTROL_API_URL="http://localhost:4000"

# Deploy Engine (Port 4002)
# Used by: Control API (activation), Build Worker (upload)
DEPLOY_ENGINE_URL="http://localhost:4002"

# Deployment Storage
# Used by: Deploy Engine
# Directory where apps and artifacts are stored
BASE_DIR="./apps"

BASE_DOMAIN="example.com"

# UI Configuration (Next.js)
# Used by: UI (Frontend)
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_WS_URL="http://localhost:4003"
# Note: UI accesses WS on port 4003 by default in log-viewer.tsx
